{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "healthcheckPath": "/",
    "restartPolicyType": "on_failure"
  },
  "services": [
    {
      "name": "web",
      "startCommand": "npx caddy run --config Caddyfile",
      "env": {
        "NODE_ENV": "production"
      }
    },
    {
      "name": "api",
      "rootDir": "server",
      "startCommand": "npm run start",
      "env": {
        "NODE_ENV": "production"
      }
    }
  ]
}
